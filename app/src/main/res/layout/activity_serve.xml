<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/randomize"
            android:text="@string/coinflip" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="70dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/vsHeader"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Team A Selection Matrix -->
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/serveTeamAPlayer1"
            app:layout_constraintTop_toBottomOf="@+id/randomize" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/teamAPlayer1Accept"
            app:layout_constraintStart_toEndOf="@+id/teamAPlayer1Serve" android:layout_marginTop="5dp"
            android:visibility="invisible"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/serveTeamAPlayer2"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/teamAPlayer1Serve"
            app:layout_constraintStart_toEndOf="@+id/teamASideLeft"
            app:layout_constraintEnd_toStartOf="@+id/teamAPlayer2Accept" android:visibility="invisible"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/teamASide"
            app:layout_constraintTop_toBottomOf="@+id/teamAPlayer2Serve"
            android:layout_marginTop="10dp" app:layout_constraintStart_toEndOf="@+id/teamASideLeft"
            app:layout_constraintEnd_toStartOf="@+id/teamASideRight" android:visibility="invisible"/>
    <Button
            android:text="@string/takes_serve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/teamAPlayer1Serve"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/serveTeamAPlayer1" android:visibility="invisible"/>
    <Button
            android:text="@string/takes_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/teamASideLeft"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@+id/teamASide" android:layout_marginTop="10dp"
            android:visibility="invisible"/>
    <Button
            android:text="@string/takes_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/teamASideRight"
            app:layout_constraintStart_toEndOf="@+id/teamASideLeft"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/teamASide" android:layout_marginTop="10dp"
            android:visibility="invisible"/>
    <Button
            android:text="@string/takes_serve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/teamAPlayer2Serve"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/serveTeamAPlayer2" android:visibility="invisible"/>
    <Button
            android:text="@string/takes_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/teamAPlayer1Accept"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/serveTeamAPlayer1"
            app:layout_constraintStart_toEndOf="@+id/teamAPlayer1Serve" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" android:visibility="invisible"/>
    <Button
            android:text="@string/takes_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/teamAPlayer2Accept"
            app:layout_constraintStart_toEndOf="@+id/teamASideLeft"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/serveTeamAPlayer2" android:layout_marginTop="10dp"
            android:visibility="invisible"/>

    <!-- Team B Selection Matrix -->
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/serveTeamBPlayer1"
            app:layout_constraintTop_toBottomOf="@+id/randomize" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/teamBPlayer1Accept"
            app:layout_constraintStart_toEndOf="@+id/teamBPlayer1Serve" android:layout_marginTop="5dp"
            android:visibility="invisible"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/serveTeamBPlayer2"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/teamBPlayer1Serve"
            app:layout_constraintStart_toEndOf="@+id/teamBPlayer2Serve"
            app:layout_constraintEnd_toStartOf="@+id/teamBPlayer2Accept" android:visibility="invisible"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/teamBSide"
            app:layout_constraintTop_toBottomOf="@+id/teamBPlayer2Serve"
            android:layout_marginTop="10dp" app:layout_constraintStart_toEndOf="@+id/teamBSideLeft"
            app:layout_constraintEnd_toStartOf="@+id/teamBSideRight" android:visibility="invisible"/>
    <Button
            android:text="@string/takes_serve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/teamBPlayer1Serve"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/serveTeamBPlayer1"
            app:layout_constraintEnd_toStartOf="@+id/teamBPlayer1Accept" android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" android:visibility="invisible"/>
    <Button
            android:text="@string/takes_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/teamBSideLeft"
            app:layout_constraintTop_toBottomOf="@+id/teamBSide" android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@+id/teamBSideRight" android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" android:visibility="invisible"/>
    <Button
            android:text="@string/takes_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/teamBSideRight"
            app:layout_constraintTop_toBottomOf="@+id/teamBSide" android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp" android:visibility="invisible"/>
    <Button
            android:text="@string/takes_serve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/teamBPlayer2Serve"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/serveTeamBPlayer2"
            app:layout_constraintEnd_toStartOf="@+id/teamBPlayer2Accept" android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" android:visibility="invisible"/>
    <Button
            android:text="@string/takes_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/teamBPlayer1Accept"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/serveTeamBPlayer1"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp" android:visibility="invisible"/>
    <Button
            android:text="@string/takes_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/teamBPlayer2Accept"
            app:layout_constraintTop_toBottomOf="@+id/serveTeamBPlayer2" android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp" android:visibility="invisible"/>


</androidx.constraintlayout.widget.ConstraintLayout>